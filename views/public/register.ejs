<%- include ../header.ejs %>
<%- include ../menu.ejs %>
<div class="page-content">
    <div class="container">
        <div class="col-md-4 col-md-offset-3">
            <h1 class="page-header">用户注册 <a href="/public/login<%= "?_=" + Date.now() %>">直接登录</a></h1>

            <form class="form-horizontal" method="post" action="/public/register<%= "?_=" + Date.now() %>" role="form">
                <div class="form-group">
                    <label for="inputName" class="control-label">用户名</label>
                    <input id="inputName" name="name" type="text" class="form-control" placeholder="用户名">
                </div>
                <div class="form-group">
                    <label for="inputPwd" class="control-label">密码</label>
                    <input id="inputPwd" name="pwd" type="password" class="form-control" placeholder="密码">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">注册</button>
                </div>
                <% if(typeof error !== "undefined"){ %>
                <div>
                    <label style="color:red"><%= error %></label>
                </div>
                <% } %>
            </form>
        </div>
    </div>
</div>
<%- include ../footer.ejs %>